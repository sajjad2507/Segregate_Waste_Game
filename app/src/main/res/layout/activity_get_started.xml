<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStarted">
    
    <ImageView
        android:id="@+id/getStartedImage"
        android:layout_width="190dp"
        android:layout_height="275dp"
        android:src="@drawable/getstartedimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/getStartedImage">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's"
                android:textSize="32sp"
                android:fontFamily="@font/langar"
                android:textColor="@color/black"
                android:layout_marginStart="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segregate"
                android:textSize="32sp"
                android:fontFamily="@font/langar"
                android:textColor="#80A21B"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="the"
                android:textSize="32sp"
                android:fontFamily="@font/langar"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waste"
                android:textSize="32sp"
                android:fontFamily="@font/langar"
                android:textColor="@color/black"
                android:layout_marginStart="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="into"
                android:textSize="32sp"
                android:fontFamily="@font/langar"
                android:textColor="#80A21B"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Different"
                android:textSize="32sp"
                android:fontFamily="@font/langar"
                android:textColor="#BB184A"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bins"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:fontFamily="@font/langar"
            android:textColor="#BB184A"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/getStartedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to \nStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48dp"
        android:paddingStart="26dp"
        android:paddingEnd="26dp"
        android:textSize="18sp"
        android:fontFamily="@font/lemon"
        android:background="@drawable/btn"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>